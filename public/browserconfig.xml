<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
    <msapplication>
        <tile>
            <square70x70logo src="/icon-64.png"/>
            <square150x150logo src="/icon-128.png"/>
            <square310x310logo src="/icon-256.png"/>
            <wide310x150logo src="/icon-256.png"/>
            <TileColor>#0b0b0b</TileColor>
        </tile>
        <badge>
            <polling-uri src="/api/status"/>
            <frequency>30</frequency>
